<%- include('partials/header') -%>

<main class="min-h-screen bg-gradient-to-b from-base-100 to-primary/5">
  <div class="container mx-auto px-4 py-16">
    <% if (!locals.user) { %>
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Welcome to <span class="bg-gradient-to-r from-[#1f4037] to-primary text-transparent bg-clip-text">MVC Template</span>
      </h1>
      <p class="text-xl text-base-content/80 mb-8 max-w-2xl mx-auto">
        A modern, secure, and scalable starting point for your web applications. Built with Node.js, Express, and MongoDB.
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/login" class="btn btn-primary gap-2">
          Login
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </a>
        <a href="/signup" class="btn btn-outline btn-primary gap-2">
          Create Account
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6z" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Features Section -->
    <div class="grid md:grid-cols-3 gap-8 mt-16">
      <div class="card bg-base-100 shadow-md hover:shadow-lg transition duration-150">
        <div class="card-body">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <h3 class="card-title">Secure Authentication</h3>
          <p class="text-base-content/70">Built-in user authentication system with modern security practices.</p>
        </div>
      </div>

      <div class="card bg-base-100 shadow-md hover:shadow-lg transition duration-150">
        <div class="card-body">
          <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
            </svg>
          </div>
          <h3 class="card-title">MVC Architecture</h3>
          <p class="text-base-content/70">Clean and organized code structure following the MVC pattern.</p>
        </div>
      </div>

      <div class="card bg-base-100 shadow-md hover:shadow-lg transition duration-150">
        <div class="card-body">
          <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="card-title">Ready to Scale</h3>
          <p class="text-base-content/70">Built with modern tools and practices for easy scaling.</p>
        </div>
      </div>
    </div>
    <% } else { %>
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Welcome Back <span class="text-primary"><%= user.userName %></span>  !!
      </h1>
      <div class="flex justify-center mt-8">
        <a href="/feed" class="btn btn-primary btn-lg">Go to Feed</a>
      </div>
    </div>
    <% } %>
  </div>
</main>

<%- include('partials/footer') -%>